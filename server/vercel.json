{
  "version": 2,
  "projects": {
    "client": {
      "src": "client",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    "server": {
      "src": "server",
      "use": "@vercel/node"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "server/server.js" },
    { "src": "/(.*)", "dest": "client/dist/$1" }
  ]
}
